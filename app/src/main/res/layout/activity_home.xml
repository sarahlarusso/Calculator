<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E4159"
    tools:context=".home">


    <TextView
        android:id="@+id/textHome"
        android:layout_width="wrap_content"
        android:layout_height="200dp"

        android:layout_marginLeft="231dp"

        android:layout_marginRight="231dp"
        android:layout_marginBottom="200dp"
        android:lineSpacingExtra="35sp"
        android:text="@string/star"
        android:textColor="@android:color/white"
        android:textSize="130sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"

        android:layout_height="100dp"
        android:lineSpacingExtra="40sp"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="72sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <Button
        android:id="@+id/home1"

        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonround"
        android:lineSpacingExtra="0sp"
        android:padding="7dp"
        android:shape="rectangle"
        android:text="@string/home1"
        android:textColor="#FFFFE0"
        android:textSize="38sp"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <Button
        android:id="@+id/home2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/buttonround"
        android:onClick="viewPeople"
        android:padding="7dp"
        android:text="@string/home2"
        android:textColor="#FFFFE0"
        android:textSize="38sp"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <Button
        android:id="@+id/home3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/buttonround"
        android:lineSpacingExtra="12sp"
        android:onClick="gotoTasks"
        android:padding="7dp"
        android:shape="rectangle"
        android:text="@string/home3"
        android:textColor="#FFFFE0"
        android:textSize="38sp"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.62" />

    <Button
        android:id="@+id/home4"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="660dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/buttonround"
        android:lineSpacingExtra="12sp"
        android:onClick="viewTasks"
        android:padding="7dp"
        android:shape="rectangle"
        android:text="@string/home4"
        android:textColor="#FFFFE0"
        android:textSize="38sp"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />


</android.support.constraint.ConstraintLayout>